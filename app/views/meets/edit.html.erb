<%= form_for(@meet) do |f| %>
	<div class="field">
		<p>&nbsp&nbsp&nbsp&nbsp<b>Name</b></p>
		<p>&nbsp&nbsp&nbsp&nbsp<%= f.text_field :name %></p>
	</div>
	<div class="field">
		<p>&nbsp&nbsp&nbsp&nbsp<b>Date</b></p>
		<p>&nbsp&nbsp&nbsp&nbsp<%= f.date_select :date %></p>
	</div>
	<div class="field">
		<p>&nbsp&nbsp&nbsp&nbsp<b>Location</b></p>
		<p>&nbsp&nbsp&nbsp&nbsp<%= f.text_field :location %></p>
	</div>
	<div>
		<%=f.hidden_field:host_id, :value => current_host.id%>
	</div>
	
	<div class="actions">
		<p>&nbsp&nbsp&nbsp&nbsp<%= f.submit %></p>
	</div>
	
	<% if @meet.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= pluralize(@meet.errors.count, "error") %> prohibited this meet from being saved:</h2>
	 
	    <ul>
	    <% @meet.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>
<% end %>
